#!/bin/bash

usage() {
	cat << EOF
Usage: $(basename $0) <offset x> <name>
EOF
}

test $# -ne 2 && usage && exit 1

test -f $COLOR_FILE && source $COLOR_FILE

height="$TOP_PADDING"
font="$BAR_FONT"
gaps="$GAPS"

resolution="$(xrandr --nograb --current | awk '/\*/ {printf $1; exit}')"
monitor_width="${resolution/x*}"
TMP_WIDTH="$(( monitor_width / 15 ))"
width="${WIDTH:-$TMP_WIDTH}"

geometry="${width}x$height+${1:-0}+$(( $gaps / 2))"

lemonbar -d -g "$geometry" -f "$font" -B "$color0" -F "$color3" -n "$2"
