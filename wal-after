#!/usr/bin/env bash

source "${HOME}/.cache/wal/colors.sh"

set-border-colors() {
	test -n $(pgrep "bspwm") && \
		bspc config focused_border_color "$color3" && \
		bspc config normal_border_color "$color0"
}

main() {
	sstart bar r 2> /dev/null
	set-border-colors
	sstart pulseborder r 2> /dev/null
}

main > /dev/null 2>&1
