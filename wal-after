#!/usr/bin/env bash

source "${HOME}/.cache/wal/colors.sh"

set-bspwm-colors() {
	bspc config focused_border_color "${color3}"
	bspc config active_border_color "${color3}"
}

refresh_pulse() {
	test -n "$(pgrep rainbow)" && pulse r
}

main() {
	sstart bar r
	set-bspwm-colors
	refresh_pulse
}

main > /dev/null 2>&1
