#!/usr/bin/env bash
# sends first arg as notification

MAXENGTH=${MAXLENGTH:-40}
SLEEP=${SLEEP:-10}
export WIDTH="$(( $(monwidth) / 5 ))"

print_msg() {
	test ${#1} -ge $maxlength && printf "%s\n" "%{c}${1:0:$maxlength}.." || \
		printf "%s\n" "%{c}$1"
}

( print_msg "$1"; sleep "$SLEEP" ) |\
	
mybar "$(( $(monwidth) / 2 - WIDTH / 2))" "notify" &
