#!/bin/sh

while IFS=: read ev wid; do
    case $ev in
        # window creation
        16) wattr o $wid || winhandle $wid ;;

        # focus next window when deleting focused window
        18) wattr $(pfw) || snap -p 2>/dev/null ;;

        # mapping requests
        19) wattr o $wid || chfcs -w $wid & ;;

        # entering window
        7)  wattr o $wid || chfcs -w $wid & ;;
    esac
done
