#!/bin/bash

elemwidth() {
	echo "$(( $(monwidth) / 15 ))"
}

newmails() {
	echo "$(ls "$MAIL/new" | wc -l)"
}

vol() {
	test "$(volume -s)" = "on" && volume || echo "!$(volume)"

}

# left bar
while :; do
	printf "%s%3s %3d %2d %2d\n" "%{c}" "$(vol)" "$(bat)" "$(newmails)" "$(todo -n)"
	sleep 1s
done |\

mybar $GAPS "bar" &

# right bar
while :; do
	printf "%s%(%d.%m  %I:%M)T\n" "%{c}"
	sleep 60s 
done |\

mybar $(( $(monwidth) - $(elemwidth) - GAPS )) "bar" &

