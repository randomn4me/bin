#!/bin/bash

source $COLOR_FILE

resolution="$(xrandr --nograb --current | awk '/\*/ {printf $1; exit}')"
monitor_width="${resolution/x*}"

width="$(( (monitor_width / 4)))"
height="$TOP_PADDING"
font="$BAR_FONT"
gaps="$GAPS"

offset_x="$(( (monitor_width / 2) - (width / 2) ))"
offset_y="$(( $gaps / 2))"

dmenu_run -q -i -name "menu" -class "dmenu" -h "$height" -w "$width" -fn "$font" -x "$offset_x" -y "$offset_y" -nb "$color0" -nf "$color3" -sb "$color3" -sf "$color0" 2>&1
